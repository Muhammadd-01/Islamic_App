rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Users Collection
    match /users/{userId} {
      // Allow user to create their own profile during signup
      allow create: if isAuthenticated() && request.auth.uid == userId;
      // Allow user to read/update their own profile
      allow read, update: if isAuthenticated() && request.auth.uid == userId;
      // Admins can read all users
      allow read, write: if isAdmin();
    }

    // Books Collection
    match /books/{bookId} {
      allow read: if true; // Public read
      allow write: if isAdmin(); // Admin write
    }

    // Questions Collection (Q&A)
    match /questions/{questionId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Notifications - Allow users to read and UPDATE their own notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Allow users to update their own notifications (mark as read)
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create, delete: if isAdmin();
    }
    
    // Bookmarks Collection - Allow users to manage their own bookmarks
    match /bookmarks/{bookmarkId} {
      allow read, write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // User Bookmarks - subcollection under users
    match /users/{userId}/bookmarks/{bookmarkId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Carts Collection
    match /carts/{userId} {
       allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Carts with subcollection items
    match /carts/{userId}/items/{itemId} {
       allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Hadiths Collection - Public read
    match /hadiths/{hadithId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Scholars Collection - Public read
    match /scholars/{scholarId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Courses Collection - Public read
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // History Collection - Public read
    match /history/{historyId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Beliefs Collection - Public read
    match /beliefs/{beliefId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Politics Collection - Public read
    match /politics/{politicsId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // News Collection - Public read
    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Duas Collection - Public read
    match /duas/{duaId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Names of Allah Collection - Public read
    match /names_of_allah/{nameId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Orders Collection - Users can create and read their own orders
    match /orders/{orderId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }
    
    // Dua Categories Collection - Public read
    match /dua_categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Prayer Tracking - subcollection under users
    match /users/{userId}/prayerTracking/{trackingId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Inventions Collection - Public read
    match /inventions/{inventionId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Scientists Collection - Public read
    match /scientists/{scientistId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Articles Collection - Public read
    match /articles/{articleId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Quran Collection - Public read
    match /quran/{surahId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Quran Ayahs subcollection
    match /quran/{surahId}/ayahs/{ayahId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Settings/Config Collection - Public read
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // App Config Collection
    match /config/{configId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Catch-all for any other public read collections
    match /{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}

