rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPER FUNCTIONS ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // --- USER PROFILE & CORE DATA ---
    match /users/{userId} {
      allow create: if isOwner(userId);
      // permits the Tasbeeh transaction to sync total_tasbeeh_count
      allow read, update: if isOwner(userId);
      allow read, write: if isAdmin();
    }

    // --- PRAYER TRACKING ---
    match /prayer_tracking/{docId} {
      // Allows user to manage their own prayer completion progress
      // The docId format is 'userId_date', so we check if it starts with the UID
      allow read: if isAuthenticated() && (docId.startsWith(request.auth.uid) || resource.data.user_id == request.auth.uid);
      allow write: if isAuthenticated() && (docId.startsWith(request.auth.uid) || request.resource.data.user_id == request.auth.uid);
    }

    // --- TASBEEH & SPIRITUAL TOOLS ---
    match /tasbeeh_stats/{userId} {
      // Allows user to manage their own streaks and daily counts
      allow read, write: if isOwner(userId);
      allow read: if isAdmin();
    }

    match /azkar/{azkarId} {
      allow read: if true; // Publicly readable for the app
      allow write: if isAdmin(); // Managed via Admin Panel
    }

    match /names_of_allah/{nameId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /quran/{surahId} {
      allow read: if true;
      allow write: if isAdmin();
      match /ayahs/{ayahId} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    match /hadiths/{hadithId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /duas/{duaId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /dua_categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- E-COMMERCE & USER ACTIVITY ---
    match /books/{bookId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /orders/{orderId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    match /carts/{userId} {
       allow read, write: if isOwner(userId);
       match /items/{itemId} {
          allow read, write: if isOwner(userId);
       }
    }

    match /bookmarks/{bookmarkId} {
      allow read, write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // Sub-collection style bookmarks
    match /users/{userId}/bookmarks/{bookmarkId} {
      allow read, write: if isOwner(userId);
    }

    // --- KNOWLEDGE & CONTENT ---
    match /questions/{questionId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    match /scholars/{scholarId} { 
      allow read: if true; 
      // Allow users to book by updating isBooked field
      allow update: if isAuthenticated() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isBooked']);
      allow write: if isAdmin(); 
    }

    match /courses/{courseId} { allow read: if true; allow write: if isAdmin(); }
    match /history/{historyId} { allow read: if true; allow write: if isAdmin(); }
    match /beliefs/{beliefId} { allow read: if true; allow write: if isAdmin(); }
    match /politics/{politicsId} { allow read: if true; allow write: if isAdmin(); }
    match /news/{newsId} { allow read: if true; allow write: if isAdmin(); }
    match /inventions/{inventionId} { allow read: if true; allow write: if isAdmin(); }
    match /scientists/{scientistId} { allow read: if true; allow write: if isAdmin(); }
    match /articles/{articleId} { allow read: if true; allow write: if isAdmin(); }

    match /course_enrollments/{enrollmentId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    // --- APP MAINTENANCE & FEEDBACK ---
    match /notifications/{notificationId} {
      allow read, update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create, delete: if isAdmin();
    }

    match /settings/{settingId} { allow read: if true; allow write: if isAdmin(); }
    match /config/{configId} { allow read: if true; allow write: if isAdmin(); }
    
    // --- FUTURE NEEDS ---
    // Reviews & Ratings
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // User Feedback/Reports
    match /bookings/{bookingId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if false; // Only written via Backend Admin SDK
    }

    match /reports/{reportId} {
      allow create: if isAuthenticated();
      allow read, write: if isAdmin();
    }
    
    // Donation Logs
    match /donations/{donationId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // --- CATCH ALL ---
    match /{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}